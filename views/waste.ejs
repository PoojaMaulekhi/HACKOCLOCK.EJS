<%- include("html.ejs") %>

<h2>Waste details by user from logWaste page</h2>

<% for (let user of userdata) { %>
    <div style="border:2px solid black; margin-bottom:10px; padding:10px;">
        <h3>Location: <%= user.location %></h3>
        <h3>Plastic Type: <%= user.plastic %></h3>
        <h3>Weight (KG): <%= user.weight %></h3>
    </div>
<% } %>

<button onclick="window.location.href='/'">
    Get back to Home page
</button>
<!-- we have to show  multiple data then apply loop  -->